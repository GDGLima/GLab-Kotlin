<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/greyGDGLima"
    tools:context="com.gdglima.glabkotlin.gdglimaapp.ui.fragments.ScheduleFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.CardView
        android:id="@+id/cardViewActivities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:layout_margin="10dp">
        <RelativeLayout
            android:id="@+id/relativeLayoutActivity"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="40dp"
                android:paddingRight="20dp"
                android:paddingTop="80dp"
                android:paddingBottom="80dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="@string/programa" />
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_next2"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewWorkshops"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:layout_margin="10dp">
        <RelativeLayout
            android:id="@+id/relativeLayoutWorkshop"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:paddingLeft="40dp"
                android:paddingRight="20dp"
                android:paddingTop="80dp"
                android:paddingBottom="80dp"
                android:layout_centerVertical="true"
                android:text="@string/talleres" />

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_next2"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
